#!/bin/bash

sed -E \
    -e 's|^(.*EC(..)(..)#10.*)$|\1\t// TP.CM_RTS  (\3 -> \2)|' \
    -e 's|^(.*EC(..)(..)#11.*)$|\1\t// TP.CM_CTS  (\2 <- \3)|' \
    -e 's|^(.*EC(..)(..)#13.*)$|\1\t// TP.CM_ACK  (\2 <- \3)|' \
    -e 's|^(.*EC(..)(..)#20.*)$|\1\t// TP.CM_BAM  (\3 -> \2)|' \
    -e 's|^(.*EC(..)(..)#FF.*)$|\1\t// TP.CM_ABRT (\3 <- \2)|' \
    -e 's|^(.*EB(..)(..)#.*)$|\1\t// TP.DT      (\3 -> \2)|' \
    "$@"
